@{
    ViewData["Title"] = "Add New Vehicle";
}

<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Header -->
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Add New Vehicle</h4>
                    <a asp-controller="Cars" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="icon-base bx bx-arrow-back me-1"></i>Back to Vehicles
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Vehicle Information -->
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Vehicle Information</h5>
                </div>
                <div class="card-body">
                    <form id="addVehicleForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="make" class="form-label">Make <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="make" name="make" placeholder="e.g., Toyota" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="model" class="form-label">Model <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="model" name="model" placeholder="e.g., Camry" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="year" class="form-label">Year <span class="text-danger">*</span></label>
                                <select class="form-select" id="year" name="year" required>
                                    <option value="">Select Year</option>
                                    @for (int i = DateTime.Now.Year + 1; i >= 2000; i--)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="licensePlate" class="form-label">License Plate <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="licensePlate" name="licensePlate" placeholder="e.g., ABC 123" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="vin" class="form-label">VIN Number</label>
                                <input type="text" class="form-control" id="vin" name="vin" placeholder="Vehicle Identification Number">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="color" class="form-label">Color</label>
                                <input type="text" class="form-control" id="color" name="color" placeholder="e.g., White">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="category" class="form-label">Vehicle Category <span class="text-danger">*</span></label>
                                <select class="form-select" id="category" name="category" required>
                                    <option value="">Select Category</option>
                                    <option value="economy">Economy</option>
                                    <option value="compact">Compact</option>
                                    <option value="midsize">Midsize</option>
                                    <option value="standard">Standard</option>
                                    <option value="fullsize">Full Size</option>
                                    <option value="premium">Premium</option>
                                    <option value="luxury">Luxury</option>
                                    <option value="suv">SUV</option>
                                    <option value="minivan">Minivan</option>
                                    <option value="convertible">Convertible</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="transmission" class="form-label">Transmission</label>
                                <select class="form-select" id="transmission" name="transmission">
                                    <option value="automatic">Automatic</option>
                                    <option value="manual">Manual</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="fuelType" class="form-label">Fuel Type</label>
                                <select class="form-select" id="fuelType" name="fuelType">
                                    <option value="petrol">Petrol</option>
                                    <option value="diesel">Diesel</option>
                                    <option value="hybrid">Hybrid</option>
                                    <option value="electric">Electric</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="seatingCapacity" class="form-label">Seating Capacity</label>
                                <select class="form-select" id="seatingCapacity" name="seatingCapacity">
                                    <option value="2">2 Seaters</option>
                                    <option value="4">4 Seaters</option>
                                    <option value="5" selected>5 Seaters</option>
                                    <option value="7">7 Seaters</option>
                                    <option value="8">8 Seaters</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="mileage" class="form-label">Current Mileage</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="mileage" name="mileage" placeholder="0">
                                    <span class="input-group-text">km</span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="status" class="form-label">Vehicle Status <span class="text-danger">*</span></label>
                                <select class="form-select" id="status" name="status" required>
                                    <option value="available" selected>Available</option>
                                    <option value="maintenance">Under Maintenance</option>
                                    <option value="rented">Rented</option>
                                    <option value="reserved">Reserved</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Rental Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Rental Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="dailyRate" class="form-label">Daily Rate ($) <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="dailyRate" name="dailyRate" placeholder="0.00" step="0.01" required>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="weeklyRate" class="form-label">Weekly Rate ($)</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="weeklyRate" name="weeklyRate" placeholder="0.00" step="0.01">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="monthlyRate" class="form-label">Monthly Rate ($)</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="monthlyRate" name="monthlyRate" placeholder="0.00" step="0.01">
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="securityDeposit" class="form-label">Security Deposit ($)</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="securityDeposit" name="securityDeposit" placeholder="0.00" step="0.01">
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="features" class="form-label">Features</label>
                        <select class="form-select select2-features" id="features" name="features" multiple>
                            <option value="gps">GPS Navigation</option>
                            <option value="bluetooth">Bluetooth</option>
                            <option value="usb">USB Ports</option>
                            <option value="ac">Air Conditioning</option>
                            <option value="cruise">Cruise Control</option>
                            <option value="camera">Backup Camera</option>
                            <option value="sensors">Parking Sensors</option>
                            <option value="sunroof">Sunroof</option>
                            <option value="leather">Leather Seats</option>
                            <option value="heated">Heated Seats</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-xl-4">
            <!-- Vehicle Images -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Vehicle Images</h5>
                </div>
                <div class="card-body">
                    <div id="vehicleDropzone" class="dropzone needsclick">
                        <div class="dz-message needsclick">
                            <i class="icon-base bx bx-cloud-upload icon-lg mb-2"></i>
                            <span class="fs-6 text-body">Drop files here or click to upload</span>
                            <span class="fs-xs text-body-secondary">Upload up to 5 images (max 2MB each)</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Insurance & Registration -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Documentation</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="insuranceNumber" class="form-label">Insurance Policy Number</label>
                        <input type="text" class="form-control" id="insuranceNumber" name="insuranceNumber" placeholder="Insurance policy number">
                    </div>
                    <div class="mb-3">
                        <label for="insuranceExpiry" class="form-label">Insurance Expiry Date</label>
                        <input type="date" class="form-control" id="insuranceExpiry" name="insuranceExpiry">
                    </div>
                    <div class="mb-3">
                        <label for="registrationExpiry" class="form-label">Registration Expiry Date</label>
                        <input type="date" class="form-control" id="registrationExpiry" name="registrationExpiry">
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="submit" form="addVehicleForm" class="btn btn-primary">
                            <i class="icon-base bx bx-save me-1"></i>Add Vehicle
                        </button>
                        <button type="reset" form="addVehicleForm" class="btn btn-outline-secondary">
                            <i class="icon-base bx bx-reset me-1"></i>Reset Form
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- / Content -->
