@{
    ViewData["Title"] = "All Vehicles";
}

<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Header -->
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">All Vehicles</h4>
                    <a asp-controller="Cars" asp-action="Create" class="btn btn-primary">
                        <i class="icon-base bx bx-plus me-1"></i>Add New Vehicle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Search (Static) -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="search" class="form-label">Search</label>
                            <input type="text" class="form-control" id="search" placeholder="Search by make, model, license...">
                        </div>
                        <div class="col-md-2">
                            <label for="category" class="form-label">Category</label>
                            <select class="form-select" id="category">
                                <option value="">All Categories</option>
                                <option value="economy">Economy</option>
                                <option value="compact">Compact</option>
                                <option value="midsize">Midsize</option>
                                <option value="standard">Standard</option>
                                <option value="fullsize">Full Size</option>
                                <option value="premium">Premium</option>
                                <option value="luxury">Luxury</option>
                                <option value="suv">SUV</option>
                                <option value="minivan">Minivan</option>
                                <option value="convertible">Convertible</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status">
                                <option value="">All Status</option>
                                <option value="available">Available</option>
                                <option value="rented">Rented</option>
                                <option value="maintenance">Maintenance</option>
                                <option value="reserved">Reserved</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="transmission" class="form-label">Transmission</label>
                            <select class="form-select" id="transmission">
                                <option value="">All</option>
                                <option value="automatic">Automatic</option>
                                <option value="manual">Manual</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="button" class="btn btn-outline-secondary me-2">
                                <i class="icon-base bx bx-reset me-1"></i>Reset
                            </button>
                            <button type="button" class="btn btn-primary">
                                <i class="icon-base bx bx-filter me-1"></i>Apply
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="icon-base bx bx-car text-muted display-1 mb-3"></i>
                    <h4 class="text-muted">No Vehicles Found</h4>
                    <p class="text-muted mb-4">Get started by adding your first vehicle to the fleet.</p>
                    <a asp-controller="Cars" asp-action="Create" class="btn btn-primary">
                        <i class="icon-base bx bx-plus me-1"></i>Add First Vehicle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
