@{
    ViewData["Title"] = "Maintenance Report";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold mb-0">
                <i class="bx bx-wrench me-2"></i>Maintenance Report
            </h4>
            <a href="/Reports" class="btn btn-outline-secondary">
                <i class="bx bx-arrow-back me-1"></i>Back to Reports
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Vehicles</h5>
                    <h3 class="text-primary">120</h3>
                    <p class="text-muted mb-0">Fleet Size</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center border-danger">
                <div class="card-body">
                    <h5 class="card-title">Under Maintenance</h5>
                    <h3 class="text-danger">5</h3>
                    <p class="text-muted mb-0">Currently Servicing</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <h5 class="card-title">Upcoming Maintenance</h5>
                    <h3 class="text-warning">12</h3>
                    <p class="text-muted mb-0">Scheduled Soon</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center border-success">
                <div class="card-body">
                    <h5 class="card-title">Completed Maintenance</h5>
                    <h3 class="text-success">30</h3>
                    <p class="text-muted mb-0">Serviced Vehicles</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Maintenance Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Vehicle Maintenance Log</h5>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-striped">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Vehicle</th>
                                <th>License Plate</th>
                                <th>Category</th>
                                <th>Status</th>
                                <th>Maintenance Date</th>
                                <th>Expected Completion</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Toyota Camry</td>
                                <td>ABC 123</td>
                                <td>Midsize</td>
                                <td><span class="badge bg-danger">In Progress</span></td>
                                <td>2025-10-29</td>
                                <td>2025-11-02</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="bx bx-show me-1"></i>Details
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Honda CR-V</td>
                                <td>XYZ 789</td>
                                <td>SUV</td>
                                <td><span class="badge bg-warning">Scheduled</span></td>
                                <td>2025-11-05</td>
                                <td>2025-11-10</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="bx bx-show me-1"></i>Details
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Ford Mustang</td>
                                <td>MNO 456</td>
                                <td>Convertible</td>
                                <td><span class="badge bg-success">Completed</span></td>
                                <td>2025-10-15</td>
                                <td>2025-10-20</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="bx bx-show me-1"></i>Details
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional Charts -->
    <div class="row g-4 mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Maintenance Status Overview</h5>
                </div>
                <div class="card-body">
                    <canvas id="maintenanceStatusChart" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Upcoming Maintenance Schedule</h5>
                </div>
                <div class="card-body">
                    <canvas id="upcomingMaintenanceChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>

</div>
