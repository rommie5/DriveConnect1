@{
    ViewData["Title"] = "Revenue Report";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold mb-0">
                <i class="bx bx-line-chart me-2"></i>Revenue Report
            </h4>
            <a href="/Reports" class="btn btn-outline-secondary">
                <i class="bx bx-arrow-back me-1"></i>Back to Reports
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>
                    <h3 class="text-primary">$12,450</h3>
                    <p class="text-muted mb-0">This Month</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center border-success">
                <div class="card-body">
                    <h5 class="card-title">Pending Payments</h5>
                    <h3 class="text-success">$2,150</h3>
                    <p class="text-muted mb-0">Awaiting Clearance</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <h5 class="card-title">Refunds</h5>
                    <h3 class="text-warning">$450</h3>
                    <p class="text-muted mb-0">Processed</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center border-danger">
                <div class="card-body">
                    <h5 class="card-title">Net Revenue</h5>
                    <h3 class="text-danger">$9,850</h3>
                    <p class="text-muted mb-0">After Refunds</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Chart -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Monthly Revenue Trend</h5>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Transactions Table -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Recent Transactions</h5>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-bordered table-striped text-center mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Reservation ID</th>
                                <th>Customer</th>
                                <th>Amount ($)</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>2025-10-01</td>
                                <td>#R1001</td>
                                <td>John Doe</td>
                                <td>150</td>
                                <td><span class="badge bg-success">Paid</span></td>
                            </tr>
                            <tr>
                                <td>2025-10-02</td>
                                <td>#R1002</td>
                                <td>Jane Smith</td>
                                <td>250</td>
                                <td><span class="badge bg-warning">Pending</span></td>
                            </tr>
                            <tr>
                                <td>2025-10-03</td>
                                <td>#R1003</td>
                                <td>Mike Johnson</td>
                                <td>100</td>
                                <td><span class="badge bg-danger">Refunded</span></td>
                            </tr>
                            <tr>
                                <td>2025-10-04</td>
                                <td>#R1004</td>
                                <td>Emily Clark</td>
                                <td>200</td>
                                <td><span class="badge bg-success">Paid</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
