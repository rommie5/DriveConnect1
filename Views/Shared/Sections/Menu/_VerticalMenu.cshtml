@{
    TempData.Keep();
    string? currentPage = ViewContext.HttpContext.Request.Path;
}

<!-- Menu -->
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

    <div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
        <a asp-controller="Dashboards" asp-action="Index" class="app-brand-link">
            <span class="app-brand-logo demo">
                @await Html.PartialAsync("../_Partials/_Macros")
            </span>
            <span class="app-brand-text demo menu-text fw-bold ms-2">Drive Connect</span>
        </a>

        <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
            <i class="icon-base bx bx-chevron-left d-block d-xl-none align-middle"></i>
        </a>
    </div>

    <div class="menu-divider mt-0"></div>

    <div class="menu-inner-shadow"></div>

    <ul class="menu-inner py-1">
        <!-- Dashboard -->
        <li class='menu-item@(currentPage.EndsWith("/") || currentPage.StartsWith("/Dashboards/") ? " active open" : "")'>
            <a asp-controller="Dashboards" asp-action="Index" class="menu-link">
                <i class="menu-icon icon-base bx bx-home-smile"></i>
                <div class="text-truncate" data-i18n="Dashboards">Dashboard</div>
            </a>
        </li>

        <!-- Car Management -->
        <li class='menu-item@(currentPage.StartsWith("/Cars") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon icon-base bx bx-car"></i>
                <div class="text-truncate">Car Management</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Cars/Vehicles" ? " active" : "")'>
                    <a asp-controller="Cars" asp-action="Vehicles" class="menu-link">
                        <div class="text-truncate">All Vehicles</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Cars/Add" ? " active" : "")'>
                    <a asp-controller="Cars" asp-action="Create" class="menu-link">
                        <div class="text-truncate">Add New Vehicle</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Cars/Categories" ? " active" : "")'>
                    <a asp-controller="Cars" asp-action="Categories" class="menu-link">
                        <div class="text-truncate">Vehicle Categories</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Cars/Maintenance" ? " active" : "")'>
                    <a asp-controller="Cars" asp-action="Maintenance" class="menu-link">
                        <div class="text-truncate">Maintenance</div>
                    </a>
                </li>
            </ul>
        </li>

        <!-- Reservations -->
        <li class='menu-item@(currentPage.StartsWith("/Reservations") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon icon-base bx bx-calendar-check"></i>
                <div class="text-truncate">Reservations</div>
                <span class="badge rounded-pill bg-primary ms-auto">14</span>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Reservations/All" ? " active" : "")'>
                    <a asp-controller="Reservations" asp-action="List" class="menu-link">
                        <div class="text-truncate">All Reservations</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Reservations/New" ? " active" : "")'>
                    <a asp-controller="Reservations" asp-action="Create" class="menu-link">
                        <div class="text-truncate">New Reservation</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Reservations/Active" ? " active" : "")'>
                    <a asp-controller="Reservations" asp-action="Active" class="menu-link">
                        <div class="text-truncate">Active Rentals</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Reservations/Upcoming" ? " active" : "")'>
                    <a asp-controller="Reservations" asp-action="Upcoming" class="menu-link">
                        <div class="text-truncate">Upcoming</div>
                    </a>
                </li>
            </ul>
        </li>

        <!-- Customers -->
        <li class='menu-item@(currentPage.StartsWith("/Customers") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon icon-base bx bx-user"></i>
                <div class="text-truncate">Customers</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Customers/All" ? " active" : "")'>
                    <a asp-controller="Customers" asp-action="Index" class="menu-link">
                        <div class="text-truncate">All Customers</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Customers/Add" ? " active" : "")'>
                    <a asp-controller="Customers" asp-action="Create" class="menu-link">
                        <div class="text-truncate">Add Customer</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Customers/Loyalty" ? " active" : "")'>
                    <a asp-controller="Customers" asp-action="Loyalty" class="menu-link">
                        <div class="text-truncate">Loyalty Program</div>
                    </a>
                </li>
            </ul>
        </li>

        <!-- Billing & Payments -->
        <li class='menu-item@(currentPage.StartsWith("/Billing") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon icon-base bx bx-credit-card"></i>
                <div class="text-truncate">Billing & Payments</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Billing/Invoices" ? " active" : "")'>
                    <a asp-controller="Billing" asp-action="Invoices" class="menu-link">
                        <div class="text-truncate">Invoices</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Billing/Payments" ? " active" : "")'>
                    <a asp-controller="Billing" asp-action="Payments" class="menu-link">
                        <div class="text-truncate">Payment History</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Billing/Pricing" ? " active" : "")'>
                    <a asp-controller="Billing" asp-action="Pricing" class="menu-link">
                        <div class="text-truncate">Pricing Plans</div>
                    </a>
                </li>
            </ul>
        </li>

        <!-- Reports & Analytics -->
        <li class='menu-item@(currentPage.StartsWith("/Reports") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon icon-base bx bx-bar-chart"></i>
                <div class="text-truncate">Reports & Analytics</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Reports/Revenue" ? " active" : "")'>
                    <a asp-controller="Reports" asp-action="Revenue" class="menu-link">
                        <div class="text-truncate">Revenue Reports</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Reports/Utilization" ? " active" : "")'>
                    <a asp-controller="Reports" asp-action="Utilization" class="menu-link">
                        <div class="text-truncate">Utilization</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Reports/Maintenance" ? " active" : "")'>
                    <a asp-controller="Reports" asp-action="Maintenance" class="menu-link">
                        <div class="text-truncate">Maintenance Reports</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Reports/Customer" ? " active" : "")'>
                    <a asp-controller="Reports" asp-action="Customer" class="menu-link">
                        <div class="text-truncate">Customer Analytics</div>
                    </a>
                </li>
            </ul>
        </li>

        <!-- Locations for the Car suppliers-->
        <li class='menu-item@(currentPage.StartsWith("/Locations") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon icon-base bx bx-map"></i>
                <div class="text-truncate">Locations</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Locations/Branches" ? " active" : "")'>
                    <a asp-controller="Locations" asp-action="Branches" class="menu-link">
                        <div class="text-truncate">Branch Offices</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Locations/Add" ? " active" : "")'>
                    <a asp-controller="Locations" asp-action="Create" class="menu-link">
                        <div class="text-truncate">Add New Branch</div>
                    </a>
                </li>
            </ul>
        </li>

        <!-- System Management -->
        <li class="menu-header small text-uppercase">
            <span class="menu-header-text">System Management</span>
        </li>

        <!-- Staff Management -->
        <li class='menu-item@(currentPage.StartsWith("/Staff") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon icon-base bx bx-group"></i>
                <div class="text-truncate">Staff Management</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Staff/All" ? " active" : "")'>
                    <a asp-controller="Staff" asp-action="Index" class="menu-link">
                        <div class="text-truncate">All Staff</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Staff/Add" ? " active" : "")'>
                    <a asp-controller="Staff" asp-action="Create" class="menu-link">
                        <div class="text-truncate">Add Staff</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Staff/Roles" ? " active" : "")'>
                    <a asp-controller="Staff" asp-action="Roles" class="menu-link">
                        <div class="text-truncate">Roles & Permissions</div>
                    </a>
                </li>
            </ul>
        </li>

        <!-- Settings -->
        <li class='menu-item@(currentPage.StartsWith("/Settings") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon icon-base bx bx-cog"></i>
                <div class="text-truncate">Settings</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Settings/General" ? " active" : "")'>
                    <a asp-controller="Settings" asp-action="General" class="menu-link">
                        <div class="text-truncate">General Settings</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Settings/Vehicle" ? " active" : "")'>
                    <a asp-controller="Settings" asp-action="Vehicle" class="menu-link">
                        <div class="text-truncate">Vehicle Settings</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Settings/Billing" ? " active" : "")'>
                    <a asp-controller="Settings" asp-action="Billing" class="menu-link">
                        <div class="text-truncate">Billing Settings</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Settings/Notifications" ? " active" : "")'>
                    <a asp-controller="Settings" asp-action="Notifications" class="menu-link">
                        <div class="text-truncate">Notifications</div>
                    </a>
                </li>
            </ul>
        </li>

        <!-- Help & Support -->
        <li class="menu-header small text-uppercase">
            <span class="menu-header-text">Help & Support</span>
        </li>

        <li class='menu-item@(currentPage == "/Help/Documentation" ? " active" : "")'>
            <a asp-controller="Help" asp-action="Documentation" class="menu-link">
                <i class="menu-icon icon-base bx bx-book"></i>
                <div class="text-truncate">System Manual</div>
            </a>
        </li>

        <li class='menu-item@(currentPage == "/Help/Support" ? " active" : "")'>
            <a asp-controller="Help" asp-action="Support" class="menu-link">
                <i class="menu-icon icon-base bx bx-support"></i>
                <div class="text-truncate">Technical Support</div>
            </a>
        </li>

    </ul>

</aside>
<!-- / Menu -->
