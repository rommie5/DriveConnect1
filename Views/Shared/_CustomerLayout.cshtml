<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DriveConnect</title>

    <!-- Bootstrap / Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/boxicons/css/boxicons.min.css" />
</head>
<body>

    <!-- Customer Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary shadow-sm mb-4">
        <div class="container">
            <a class="navbar-brand text-white fw-bold" asp-controller="CustomerDashboard" asp-action="Index">
                DriveConnect
            </a>
            <div>
                <a class="btn btn-light" asp-controller="CustomerProfile" asp-action="Index">
                    <i class="bx bx-user"></i> Profile
                </a>
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
