@{
    ViewData["Title"] = "Pricing Plans";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold mb-0">
                <i class="bx bx-dollar-circle me-2"></i>Pricing Plans
            </h4>
            <a href="/Billing/Invoices" class="btn btn-outline-secondary">
                <i class="bx bx-arrow-back me-1"></i>Back to Invoices
            </a>
        </div>
    </div>

    <!-- Pricing Cards -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card text-center border-primary">
                <div class="card-header bg-primary text-white">
                    Economy
                </div>
                <div class="card-body">
                    <h3 class="card-title">$25 <small>/day</small></h3>
                    <ul class="list-group list-group-flush my-3">
                        <li class="list-group-item">Basic Vehicle</li>
                        <li class="list-group-item">Unlimited Mileage</li>
                        <li class="list-group-item">Standard Insurance</li>
                    </ul>
                    <a href="/Reservations/Create" class="btn btn-primary">
                        Reserve Now
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center border-success">
                <div class="card-header bg-success text-white">
                    Standard
                </div>
                <div class="card-body">
                    <h3 class="card-title">$45 <small>/day</small></h3>
                    <ul class="list-group list-group-flush my-3">
                        <li class="list-group-item">Mid-size Vehicle</li>
                        <li class="list-group-item">Unlimited Mileage</li>
                        <li class="list-group-item">Full Insurance</li>
                    </ul>
                    <a href="/Reservations/Create" class="btn btn-success">
                        Reserve Now
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center border-warning">
                <div class="card-header bg-warning text-white">
                    Premium
                </div>
                <div class="card-body">
                    <h3 class="card-title">$75 <small>/day</small></h3>
                    <ul class="list-group list-group-flush my-3">
                        <li class="list-group-item">Luxury Vehicle</li>
                        <li class="list-group-item">Unlimited Mileage</li>
                        <li class="list-group-item">Premium Insurance</li>
                        <li class="list-group-item">VIP Support</li>
                    </ul>
                    <a href="/Reservations/Create" class="btn btn-warning">
                        Reserve Now
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional Table Comparison -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Plan Comparison</h5>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-bordered text-center mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Features</th>
                                <th>Economy</th>
                                <th>Standard</th>
                                <th>Premium</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Vehicle Type</td>
                                <td>Basic</td>
                                <td>Mid-size</td>
                                <td>Luxury</td>
                            </tr>
                            <tr>
                                <td>Insurance</td>
                                <td>Standard</td>
                                <td>Full</td>
                                <td>Premium</td>
                            </tr>
                            <tr>
                                <td>Unlimited Mileage</td>
                                <td>✅</td>
                                <td>✅</td>
                                <td>✅</td>
                            </tr>
                            <tr>
                                <td>VIP Support</td>
                                <td>❌</td>
                                <td>❌</td>
                                <td>✅</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
