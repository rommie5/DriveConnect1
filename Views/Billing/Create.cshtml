@{
    ViewData["Title"] = "Create Invoice";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold mb-0">
                <i class="bx bx-plus-circle me-2"></i>Create Invoice
            </h4>
            <a href="/Billing/Invoices" class="btn btn-outline-secondary">
                <i class="bx bx-arrow-back me-1"></i>Back to Invoices
            </a>
        </div>
    </div>

    <form id="createInvoiceForm">

        <div class="row">
            <div class="col-xl-8">

                <!-- Invoice Information -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Invoice Details</h5>
                    </div>
                    <div class="card-body">

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Invoice Number <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" placeholder="e.g., INV-001245" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Customer <span class="text-danger">*</span></label>
                                <select class="form-select" required>
                                    <option value="">Select Customer</option>
                                    <option>John Doe</option>
                                    <option>Emily Clark</option>
                                    <option>Michael Smith</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Invoice Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Due Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" required>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Items Section -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between">
                        <h5 class="card-title mb-0">Invoice Items</h5>
                        <button type="button" class="btn btn-sm btn-primary">
                            <i class="bx bx-plus-circle me-1"></i>Add Item
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Description</th>
                                        <th width="100">Qty</th>
                                        <th width="120">Rate ($)</th>
                                        <th width="140">Total ($)</th>
                                        <th width="50"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Rental Service Fee (Example)</td>
                                        <td><input type="number" class="form-control" value="1"></td>
                                        <td><input type="number" class="form-control" value="50"></td>
                                        <td>$50.00</td>
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-danger">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        </td>
                                    </tr>

                                    <!-- If empty -->
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-3">
                                            No items added yet
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Summary Sidebar -->
            <div class="col-xl-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Payment Summary</h5>
                    </div>
                    <div class="card-body">

                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <strong>$0.00</strong>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax (10%):</span>
                            <strong>$0.00</strong>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between mb-3">
                            <span>Total:</span>
                            <strong class="fs-5">$0.00</strong>
                        </div>

                        <label class="form-label">Payment Status</label>
                        <select class="form-select mb-3">
                            <option value="pending">Pending</option>
                            <option value="paid">Paid</option>
                        </select>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bx bx-save me-1"></i>Create Invoice
                        </button>

                    </div>
                </div>
            </div>

        </div>

    </form>

</div>
