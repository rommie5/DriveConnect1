@{
    ViewData["Title"] = "Customers";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold mb-0">
                <i class="bx bx-group me-2"></i>Customers
            </h4>
            <a href="/Customers/Create" class="btn btn-primary">
                <i class="bx bx-user-plus me-1"></i>Add Customer
            </a>
        </div>
    </div>

    <!-- Search & Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Search by name or phone">
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option value="">Filter by Status</option>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex gap-2">
                    <button type="button" class="btn btn-outline-secondary w-50">
                        <i class="bx bx-reset me-1"></i>Reset
                    </button>
                    <button type="button" class="btn btn-primary w-50">
                        <i class="bx bx-search me-1"></i>Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Customers Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Customer Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>License No</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        <!-- Static Sample Row -->
                        <tr>
                            <td>1</td>
                            <td>John Doe</td>
                            <td>john.doe@example.com</td>
                            <td>+256 772 456789</td>
                            <td>DL-892342</td>
                            <td>
                                <span class="badge bg-success">Active</span>
                            </td>
                            <td class="text-center">
                                <a href="/Customers/Details/1" class="btn btn-sm btn-info me-1">
                                    <i class="bx bx-show"></i>
                                </a>
                                <a href="/Customers/Edit/1" class="btn btn-sm btn-warning me-1">
                                    <i class="bx bx-edit"></i>
                                </a>
                                <button class="btn btn-sm btn-danger">
                                    <i class="bx bx-trash"></i>
                                </button>
                            </td>
                        </tr>

                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No more customers found
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
