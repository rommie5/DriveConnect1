@{
    ViewData["Title"] = "Customer Loyalty";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold mb-0">
                <i class="bx bx-gift me-2"></i>Customer Loyalty Program
            </h4>
            <a href="/Customers/Index" class="btn btn-outline-secondary">
                <i class="bx bx-arrow-back me-1"></i>Back to Customers
            </a>
        </div>
    </div>

    <!-- Points Overview -->
    <div class="row mb-4 g-3">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bx bxs-star text-warning fs-1 mb-2"></i>
                    <h5>Total Points</h5>
                    <h3 class="fw-bold mb-0">1320 PTS</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bx bx-dollar-circle text-primary fs-1 mb-2"></i>
                    <h5>Points Value</h5>
                    <h3 class="fw-bold mb-0">$52.80</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bx bx-crown text-success fs-1 mb-2"></i>
                    <h5>Loyalty Level</h5>
                    <h3 class="fw-bold mb-0">Gold Member</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Points Earned from Rentals -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Points History</h5>
            <button class="btn btn-primary btn-sm">
                <i class="bx bx-refresh me-1"></i>Refresh
            </button>
        </div>

        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Rental</th>
                        <th>Date Earned</th>
                        <th>Points Earned</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>

                    <!-- Sample -->
                    <tr>
                        <td>1</td>
                        <td>Rental ID: RC-2021004</td>
                        <td>Oct 12, 2025</td>
                        <td><span class="badge bg-success">+150</span></td>
                        <td><span class="badge bg-success">Confirmed</span></td>
                    </tr>

                    <tr>
                        <td>2</td>
                        <td>Rental ID: RC-2020987</td>
                        <td>Sep 22, 2025</td>
                        <td><span class="badge bg-warning text-dark">+200</span></td>
                        <td><span class="badge bg-warning text-dark">Pending</span></td>
                    </tr>

                    <tr>
                        <td colspan="5" class="text-center text-muted py-3">
                            No more records
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>

    <!-- Rewards Redeem -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bx bx-gift bx-md me-2"></i>Redeem Rewards</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">

                <!-- Sample Reward Card -->
                <div class="col-md-4">
                    <div class="card border">
                        <div class="card-body text-center">
                            <i class="bx bxs-car fs-1 text-primary mb-2"></i>
                            <h6>Free Weekend Rental</h6>
                            <p class="text-muted small">Redeem 2000 points</p>
                            <button class="btn btn-outline-primary btn-sm" disabled>Redeem</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border">
                        <div class="card-body text-center">
                            <i class="bx bx-gas-pump fs-1 text-success mb-2"></i>
                            <h6>Fuel Discount</h6>
                            <p class="text-muted small">Redeem 500 points</p>
                            <button class="btn btn-primary btn-sm">Redeem</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border">
                        <div class="card-body text-center">
                            <i class="bx bx-wrench fs-1 text-warning mb-2"></i>
                            <h6>Free Maintenance Check</h6>
                            <p class="text-muted small">Redeem 800 points</p>
                            <button class="btn btn-primary btn-sm">Redeem</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
