@{
    ViewData["Title"] = "Make a Reservation";
}

<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Header -->
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Make a Reservation</h4>
                    <a asp-controller="Reservations" asp-action="List" class="btn btn-outline-secondary">
                        <i class="icon-base bx bx-arrow-back me-1"></i>Back to Reservations
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Reservation Form -->
    <div class="row">
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Reservation Details</h5>
                </div>

                <div class="card-body">
                    <form id="reservationForm">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Select Vehicle <span class="text-danger">*</span></label>
                                <select class="form-select" id="vehicleId" name="vehicleId" required>
                                    <option value="">-- Choose Vehicle --</option>
                                    <option value="1">Toyota Corolla - 2020</option>
                                    <option value="2">Mercedes Benz C200 - 2023</option>
                                    <option value="3">Nissan XTrail - 2021</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Start Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="startDate" name="startDate" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">End Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="endDate" name="endDate" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Additional Notes (Optional)</label>
                            <textarea class="form-control" rows="3" id="notes" name="notes"
                                      placeholder="Any special requests?"></textarea>
                        </div>

                    </form>
                </div>
            </div>

            <!-- Price Info (Static Example) -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Estimated Cost</h5>
                </div>
                <div class="card-body">
                    <p class="mb-1 small text-muted">This will be calculated based on selected dates.</p>
                    <h4 class="fw-bold">$0.00</h4>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-xl-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="submit" form="reservationForm" class="btn btn-primary">
                            <i class="icon-base bx bx-check-circle me-1"></i>Confirm Reservation
                        </button>
                        <button type="reset" form="reservationForm" class="btn btn-outline-secondary">
                            <i class="icon-base bx bx-reset me-1"></i>Reset
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
<!-- / Content -->
