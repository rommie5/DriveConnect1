@{
    ViewData["Title"] = "Active Rentals";
}

<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Header -->
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Active Rentals</h4>
                    <a asp-controller="Reservations" asp-action="Create" class="btn btn-primary">
                        <i class="icon-base bx bx-plus me-1"></i>New Reservation
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- If No Active Rentals â€“ Static UI -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="icon-base bx bx-time-five text-muted display-1 mb-3"></i>
                    <h4 class="text-muted">No Active Rentals Found</h4>
                    <p class="text-muted mb-4">
                        You currently have no vehicles out on rental.
                    </p>
                    <a asp-controller="Reservations" asp-action="Create" class="btn btn-primary">
                        <i class="icon-base bx bx-car me-1"></i>Reserve a Car
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Rentals Card Example (STATIC DEMO) -->
    <div class="row mt-4">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <img src="https://via.placeholder.com/400x220?text=Toyota+Corolla" class="card-img-top" alt="Vehicle">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Toyota Corolla 2020</h5>

                    <div class="small text-muted mb-2">
                        <i class="bx bx-calendar me-1"></i> Start: Jan 02, 2025<br />
                        <i class="bx bx-calendar-check me-1"></i> End: Jan 08, 2025
                    </div>

                    <span class="badge bg-success mb-3">In Progress</span>

                    <div class="d-flex justify-content-between">
                        <a asp-controller="Reservations" asp-action="Details" class="btn btn-sm btn-outline-primary">
                            View Details
                        </a>
                        <button class="btn btn-sm btn-danger">
                            End Rental
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Duplicate Card for UI Mockup -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <img src="https://via.placeholder.com/400x220?text=Nissan+XTrail" class="card-img-top" alt="Vehicle">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Nissan XTrail 2022</h5>

                    <div class="small text-muted mb-2">
                        <i class="bx bx-calendar me-1"></i> Start: Jan 05, 2025<br />
                        <i class="bx bx-calendar-check me-1"></i> End: Jan 10, 2025
                    </div>

                    <span class="badge bg-warning mb-3">Pending Pickup</span>

                    <div class="d-flex justify-content-between">
                        <a asp-controller="Reservations" asp-action="Details" class="btn btn-sm btn-outline-primary">
                            View Details
                        </a>
                        <button class="btn btn-sm btn-outline-danger">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /Content -->
